<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Blackjack.Views.GamePage"
             BackgroundImage="BackgroundImage.png">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Source="Card_logo.png"
                       Grid.Row="0"
                       Grid.Column="0"/>
                <Image Source="Card_logo.png"
                       Grid.Row="0"
                       Grid.Column="1"/>
            </Grid>

            <Label x:Name="BetDis"
                   Text= "{Binding Bet}"
                   FontSize="60"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width ="*"/>
                    <ColumnDefinition Width ="*"/>
                    <ColumnDefinition Width ="*"/>
                    <ColumnDefinition Width ="*"/>
                    <ColumnDefinition Width ="*"/>
                </Grid.ColumnDefinitions>

                <Image Source= "RedChip.png"
                       Grid.Row="0"
                       Grid.Column="0"
                       Aspect = "AspectFill">
                    <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped= "Bet_50"/>
                    </Image.GestureRecognizers> 
                </Image>
                
                <Image Source= "GreenChip.png"
                       Grid.Row="0"
                       Grid.Column="1"
                       Aspect = "AspectFill">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                                Tapped="Bet_100"/>
                    </Image.GestureRecognizers>
                </Image>

                <Image Source= "BlueChip.png"
                       Grid.Row="0"
                       Grid.Column="2"
                       Aspect = "AspectFill">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                                Tapped="Bet_500"/>
                    </Image.GestureRecognizers>
                </Image>

                <Image Source= "PurpleChip.png"
                       Grid.Row="0"
                       Grid.Column="3"
                       Aspect = "AspectFill">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                                Tapped="Bet_1000"/>
                    </Image.GestureRecognizers>
                </Image>
                
                <Image Source= "BlackChip.png"
                      Grid.Row="0"
                      Grid.Column="4"
                       Aspect = "AspectFill">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                                Tapped="Bet_5000"/>
                    </Image.GestureRecognizers>
                </Image>
                
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Frame CornerRadius="5"  
                           BackgroundColor="#ff6666"
                           Padding="0"
                           Grid.Row="0"
                           Grid.Column="0"
                           Margin="2,2,2,15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Stand_Clicked"/>
                    </Frame.GestureRecognizers>
                    <StackLayout>
                        <Label FontAttributes="Bold" 
                                   TextColor="Black" 
                                   Text="Stand" 
                                   HorizontalOptions="CenterAndExpand" 
                                   VerticalOptions="CenterAndExpand" 
                                   LineBreakMode="WordWrap">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Stand_Clicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </Frame>

                <Frame CornerRadius="5"  
                           BackgroundColor="#4d4dff"
                           Padding="0"
                           Grid.Row="0"
                           Grid.Column="1"
                           Margin="2,2,2,15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Hit_Clicked"/>
                    </Frame.GestureRecognizers>
                    <StackLayout>
                        <Label FontAttributes="Bold" 
                                   TextColor="Black" 
                                   Text="Hit" 
                                   HorizontalOptions="CenterAndExpand" 
                                   VerticalOptions="CenterAndExpand" 
                                   LineBreakMode="WordWrap">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Hit_Clicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </Frame>
                </Grid>

            <Frame CornerRadius="5"  
                           BackgroundColor="#00ffff"
                           Padding="0"
                           Margin="2,2,2,15"
                           HeightRequest="100">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Clear_Bet_Clicked"/>
                </Frame.GestureRecognizers>
                <StackLayout>
                    <Label FontAttributes="Bold" 
                                   TextColor="Black" 
                                   Text="Clear Bet" 
                                   HorizontalOptions="CenterAndExpand" 
                                   VerticalOptions="CenterAndExpand" 
                                   LineBreakMode="WordWrap">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Clear_Bet_Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </Frame>
            

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Source="Card_logo.png"
                       Grid.Row="0"
                       Grid.Column="0"/>
                <Image Source="Card_logo.png"
                       Grid.Row="0"
                       Grid.Column="1"/>
                </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>